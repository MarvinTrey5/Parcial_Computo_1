<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="400dp"
    android:layout_height="700dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    app:cardBackgroundColor="#00B0FF"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:padding="18dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#CCFF90"
            android:gravity="center"
            android:padding="18dp"
            android:text="Arranceles Obtenidos"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/purple_200"
            android:text="Tu escogiste la carrera: "
            android:textColor="@color/white"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/MostrarCarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80D8FF"
            android:padding="15dp"
            android:text="Mostrará la carrera"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/purple_200"
            android:text="El Tipo de Universidad donde estudiastes: "
            android:textColor="@color/white"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/MostrarTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80D8FF"
            android:padding="15dp"
            android:text="Mostrará Tipo De Universidad"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/purple_200"
            android:text="Tu cuota es ingresada es: "
            android:textColor="@color/white"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/MostrarCuota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80D8FF"
            android:padding="15dp"
            android:text="Mostrará La cuotra"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Tu Cum universitario es: "
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/MostrarCum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80D8FF"
            android:padding="15dp"
            android:text="Mostrará el cum"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="El total a pagar es: "
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/MostrarApagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80D8FF"
            android:padding="15dp"
            android:text="Mostrará el total a pagar"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />

        <Button
            android:id="@+id/Nuevo"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#880E4F"
            android:layout_marginTop="30dp"
            android:backgroundTintMode="add"
            android:drawableRight="@drawable/person_add_black_24dp"
            android:padding="15dp"
            android:text="Escoger otra carrera"
            android:textSize="12dp"></Button>
    </LinearLayout>
</androidx.cardview.widget.CardView>